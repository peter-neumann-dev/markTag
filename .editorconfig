# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# HTML-Files
[*.html]
indent_style = space
indent_size = 4

# CSS-Files
[*.css]
indent_style = space
indent_size = 2

# SCSS-Files
[*.scss]
indent_style = space
indent_size = 2

# JS-Files
[*.js]
indent_style = space
indent_size = 2

# MD-Files
[*.md]
indent_style = space
indent_size = 4
max_line_length = 120
